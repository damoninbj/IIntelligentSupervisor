<Window x:Class="IIntelligentSupervisor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="840" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Name="gridNew" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="640"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Image Name="imgDisplayer"/>
        </Grid>
        <Grid Grid.Column="1" >
            <ScrollViewer VerticalScrollBarVisibility="Auto" Name="scrollOne">
                <StackPanel Orientation="Vertical" Name="gridRight">
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>

</Window>
